/ {
    combos {
        compatible = "zmk,combos";
        vg {
            timeout-ms = <100>;
            key-positions = <30 31>;
            layers = <0>;
            bindings = <&mo 4>;
        };
        slv {
            timeout-ms = <100>;
            key-positions = <29 30>;
            layers = <0>;
            bindings = <&mo 2>;
        };
    };
};

/ {
    chosen {
        zmk,physical-layout = &default_layout;
